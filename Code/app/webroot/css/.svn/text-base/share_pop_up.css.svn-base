/*global styles starts*/
*{margin:0; padding:0;
 box-sizing:border-box;
-moz-box-sizing:border-box;
-webkit-box-sizing:border-box;
-o-box-sizing:border-box;
}
img {border:none; max-width:100%; height:auto;}
a {text-decoration:none;

 transition: all 0.5s ease 0s;
-moz-transition: all 0.5s ease 0s;
-webkit-transition: all 0.5s ease 0s;
-o-transition: all 0.5s ease 0s;
}

:focus { outline:none;}

ul,li {list-style:none;}
h1,h2,h3,h4,h5,h6 { font-weight:normal;}

input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration {
  -webkit-appearance: none;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}
td,
th {
  padding: 0;
}

button,
input[type="button"], /* 1 */
input[type="reset"],
input[type="submit"] {
-webkit-appearance: button; /* 2 */
cursor: pointer; /* 3 */
font-family: 'Source Sans Pro', sans-serif, Arial;
}

input[type="text"], select, textarea{font-family: 'Source Sans Pro', sans-serif, Arial; font-size:14px; color:#9a9a9a;}

input[type="text"]:focus, input[type="password"]:focus, input[type="email"]:focus, textarea:focus {
box-shadow: 0px 0px 5px #efcfff;
-moz-box-shadow: 0px 0px 5px #efcfff;
-webkit-box-shadow: 0px 0px 5px #efcfff;
-o-box-shadow: 0px 0px 5px #efcfff;
}
body { background:#ddd;}

/*share popup css starts*/
.share_block {font-family:Arial, Helvetica, sans-serif; max-width:502px; width:100%;  background:#fcfafb;
border-radius:4px;
-moz-border-radius:4px;
-webkit-border-radius:4px;
-o-border-radius:4px;

box-shadow:0 0 5px #555;
-moz-box-shadow:0 0 5px #555;
-webkit-box-shadow:0 0 5px #555;
-o-box-shadow:0 0 5px #555;
}
.share_block:after {content:''; display:table; clear:both;}

.share_head { padding-top:10px; padding:8px 0; background:url(../img/frontend/share_head_bg.png) 0 0 repeat-x; position:relative;
border-bottom:1px solid #fcfcfc;

box-shadow:0 1px 1px #ddd;
-moz-box-shadow:0 1px 1px #ddd;
-webkit-box-shadow:0 1px 1px #ddd;
-o-box-shadow:0 1px 1px #ddd;

border-radius:4px;
-moz-border-radius:4px;
-webkit-border-radius:4px;
-o-border-radius:4px;
}
.share_head h1{ font-size:14px; font-weight:bold; text-align:left;}
.share_head a{ position:absolute; top:6px; right:15px;}

.share_feature { padding:20px; background:#f6f2ef;
box-shadow:0 -2px 1px #ccc inset;
-moz-box-shadow:0 -2px 1px #ccc inset;
-webkit-box-shadow:0 -2px 1px #ccc inset;
-o-box-shadow:0 -2px 1px #ccc inset;

}
.share_feature:after {content:''; display:table; clear:both;}

.share_feature img.feature_pic, .share_feature_txt{ float:left;}
.share_feature_txt{ padding:0 0 0 14px;}

.share_feature_ttl { font-size:18px; font-weight:bold; padding:0 0 5px;}
.share_feature_price { font-size:16px; color:#777;}
.share_feature_price .span_1{ padding-right:5px;}
.share_feature_price .span_2{ padding:0 5px;}

.share_feature_price > img{ vertical-align: text-bottom;}

.share_feature_price span .price_no{ color:#222;}
.share_feature_price span .line_through{ text-decoration:line-through;}

.share_feature img.feature_pic { border:2px solid #080002; 

border-radius:4px;
-moz-border-radius:4px;
-webkit-border-radius:4px;
-o-border-radius:4px;

}

.share_padd{padding-left:15px; padding-right:15px; color:#333;}

.share_social{ padding:0 20px 40px;}

.share_social_rw{ padding:20px 0;}
.share_social_rw.line{ border-bottom:1px solid #e6e2df;}

.share_social_col{ display:inline-block; text-align:center; vertical-align:top; max-width:111px; width:100%;}
.share_social_col a span{color:#888; text-decoration:none;}
.share_social_col a:hover span{color:#222;}
.remove_padd { padding:0;}
.share_social_col p span{ display:block; color:#555; font-size:14px; padding:0 0 3px 0;}

@media only screen and (max-width: 480px) {

.share_social_col {padding:0 0 10px 0;}
.contact_social p { font-size:17px;}
}